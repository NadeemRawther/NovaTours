            android:name="com.nova.bitsi34gb.novatours.TDSTAX"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nova.bitsi34gb.novatours.OtherExtraFeatures"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nova.bitsi34gb.novatours.Reports"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nova.bitsi34gb.novatours.Admin"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nova.bitsi34gb.novatours.Join"
            android:screenOrientation="portrait" />
